{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["vitest/globals", "vite/client", "node"]
  },
  "include": [
    "client/src",
    "server",
    "shared",
    "client/**/*.{test,spec}.{ts,tsx}",
    "server/**/*.{test,spec}.ts",
    "shared/**/*.{test,spec}.ts",
    "vitest.setup.ts"
  ]
}
